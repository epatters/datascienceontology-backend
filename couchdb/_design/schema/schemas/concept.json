{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "Concept",
  "description": "Concept in an ontology",
  "type": "object",
  "documentID": [ "schema", "ontology", "id" ],
  "required": [ "_id", "schema", "ontology", "id", "name" ],
  "properties": {
    "_id": {
      "type": "string"
    },
    "schema": {
      "enum": ["concept"]
    },
    "ontology": {
      "description": "Ontology to which the concept belongs",
      "type": "string"
    },
    "id": {
      "description": "Identifer for concept, unique within ontology",
      "type": "string"
    },
    "name": {
      "description": "Human-readable name of concept",
      "type": "string"
    },
    "description": {
      "description": "Human-readable description of concept in Markdown",
      "type": "string"
    },
    "definition": {
      "description": "Definition of concept in terms of other concepts",
      "$ref": "#/definitions/s-expression"
    }
  },
  "oneOf": [
    { "$ref": "#/definitions/object" },
    { "$ref": "#/definitions/morphism" }
  ],
  "definitions": {
    "s-expression": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/definitions/s-expression" }
        }
      ]
    },
    "object": {
      "required": [ "kind" ],
      "properties": {
        "kind": { "enum": ["object"] }
      }
    },
    "morphism": {
      "required": [ "kind", "domain", "codomain" ],
      "properties": {
        "kind": { "enum": ["morphism"] },
        "domain": { "$ref": "#/definitions/s-expression" },
        "codomain": { "$ref": "#/definitions/s-expression" }
      }
    }
  }
}
